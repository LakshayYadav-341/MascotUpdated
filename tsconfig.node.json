{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react-jsx",
    "composite": true,
    "skipLibCheck": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@*": ["./src/*"]
    },
    "outDir": "build",
    "ignoreDeprecations": "5.0",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src/"
  },
  "include": [
    "vite.config.mts",
    "config.ts", 
    "src", 
    "globals.d.ts"
  ],
}